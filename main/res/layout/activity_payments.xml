<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payments">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:text="M-PESA"
            android:gravity="center"
            android:background="@drawable/my"
            android:textAllCaps="false"
            android:onClick="mpesa"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/ic_baseline_phone_android_24"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp">
        <ImageView
            android:id="@+id/mpesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/mpesa1" />
        </LinearLayout>
        <LinearLayout
            android:text="Add card"
            android:gravity="center"
            android:background="@drawable/my"
            android:textAllCaps="false"
            android:clickable="true"
            android:onClick="card"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_baseline_credit_card_24"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginTop="150dp">
        <ImageView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/creditcard" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/my"
            android:layout_marginLeft="20dp"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginTop="250dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/black">
            <ImageView
                android:id="@+id/paypal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.518"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/paypal" />
        </LinearLayout>


    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>