<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mycolor"
    tools:context=".PasswordReset">
    <TextView
        android:id="@+id/editText"
        android:layout_width="370dp"
        android:layout_marginLeft="20dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="350dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="#A9A9A9"
        />
    <TextView
        android:layout_width="370dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:text="We will send you an email with a reset password link, click the link to reset your password"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:textSize="25sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_width="370dp"
        android:layout_marginTop="170dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColorHint="#D3D3D3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="20dp"
        android:layout_height="55dp"
        app:boxBackgroundColor="@color/white">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/mystyle"
            android:hint="Enter Your Email"
            android:text=""
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="-37dp"
        android:layout_below="@id/emailLayout"
        android:layout_marginTop="40dp"
        android:text="Request for reset email"
        android:textAllCaps="false"
        android:background="@drawable/my_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="477dp" />

</RelativeLayout>