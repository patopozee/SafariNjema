<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="visible"
    android:background="@drawable/mycolor"
    tools:context=".SignUpActivity"
    tools:visibility="visible">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Let's set up account for you"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif"/>
        <LinearLayout
            android:id="@+id/phoneNumber"
            android:layout_width="370dp"
            android:background="@drawable/mystyle"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="40dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                app:ccp_textSize="16sp"
                app:ccp_autoDetectCountry="true"
                app:ccp_showNameCode="true"/>
            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:maxLength="17"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textAlignment="viewStart"
                android:hint="Phone Number*"
                android:background="@drawable/mystyle"
                android:textColor="@color/black"
                android:textColorHint="#D3D3D3"
                android:inputType="phone"
                android:text=""
                android:textSize="16sp"/>


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_width="180dp"
            android:layout_marginTop="190dp"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:gravity="center"
            android:textColorHint="#D3D3D3"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="210dp"
            android:layout_height="55dp">
            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textCapSentences"
                android:hint="First Name*"
                android:textColorHint="#D3D3D3"
                android:background="@drawable/mystyle"
                android:text=""
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Layout0"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_width="180dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="190dp"
            android:textColorHint="#D3D3D3"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="55dp">
            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Last Name*"
                android:background="@drawable/mystyle"
                android:inputType="textCapSentences"
                android:textColor="@color/black"
                android:text="" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Layout1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_width="370dp"
            android:layout_marginTop="40dp"
            android:textColorHint="#D3D3D3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="55dp"
            android:layout_below="@id/Layout0">
            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="Enter Email Address*"
                android:text=""
                android:background="@drawable/mystyle"
                android:textColorHint="#D3D3D3"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPasswordLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_width="370dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="#D3D3D3"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="55dp"
            android:layout_below="@id/Layout1"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/black">

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:text=""
                android:background="@drawable/mystyle"
                android:hint="Enter Password*"
                android:paddingLeft="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Layout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_width="370dp"
            android:layout_marginTop="40dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="#D3D3D3"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="55dp"
            android:layout_below="@id/etPasswordLayout">
            <EditText
                android:id="@+id/editTextTextPersonName6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textCapSentences"
                android:hint="City*"
                android:background="@drawable/mystyle"
                android:text=""
                android:layout_gravity="center"
                android:textColorHint="#D3D3D3"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="-37dp"
            android:background="@drawable/my_shape"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_below="@id/checkBox"
            android:text="Register"
            android:clickable="false"
            android:enabled="false"
            android:textStyle="bold" android:layout_marginTop="20dp"/>
        <LinearLayout
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_below="@id/Layout2"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox1"/>
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"/>
        </LinearLayout>



    </RelativeLayout>
</ScrollView>